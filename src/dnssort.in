use strict;
#use locale; -- not very useful for DNS

for (shift)
{
	if (/^--version$/)
	{
		print ("dnssort version @VERSION@\n");
		exit 0;
	}
	if (/^--help$/)
	{
		print ("Usage: dnssort\n".
		       "Sorts DNS hostnames from input.\n");
		exit 0;
	}
}

my @list = ();

while(<STDIN>)
{
	chomp;
	split /\./;
	push(@list, join('.', reverse(@_)));
}

foreach(sort { lc($a) cmp lc($b) } @list)
{
	split /\./;
	print join('.', reverse(@_))."\n";
}
 
